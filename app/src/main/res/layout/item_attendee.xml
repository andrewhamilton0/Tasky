<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_edit_text"
    android:backgroundTint="@color/light_2"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <ImageView
        android:id="@+id/initialsCircleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_attendee_circle"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>
    <TextView
        android:id="@+id/attendeeInitialsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="AA"
        android:textSize="12sp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/initialsCircleImageView"
        app:layout_constraintEnd_toEndOf="@id/initialsCircleImageView"
        app:layout_constraintBottom_toBottomOf="@id/initialsCircleImageView"
        app:layout_constraintStart_toStartOf="@id/initialsCircleImageView">
    </TextView>

    <TextView
        android:id="@+id/attendeeFullNameTextViw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/initialsCircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ann Allen">
    </TextView>

    <TextView
        android:id="@+id/creatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creator"
        android:textSize="14sp"
        android:textColor="@color/light_blue"
        android:fontFamily="@font/inter_medium"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>

    <ImageButton
        android:id="@+id/deleteAttendeeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete_attendee"
        android:layout_marginEnd="15dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>